<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppConsultaCEP"
             x:Class="AppConsultaCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="LogoCorreios.png" x:Name="LOGO"></Image>
        <Entry Placeholder="Digite o cep" PlaceholderColor="#FFBF00" 
               BackgroundColor="#FFFFFF" x:Name="CEP"></Entry>
        <Button Text="BUSCAR CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" 
                x:Name="BOTAO"></Button>
        <Label  x:Name="RESULTADO"
           HorizontalOptions="Center"
           VerticalOptions="Center"/>
    </StackLayout>

</ContentPage>
